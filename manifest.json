{
    "manifest_version": 3,
    "name": "Canvas Assistant",
    "version": "1.2",
    "description": "Prioritize Canvas assignments and summarize pages.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "alarms",
        "notifications"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://*.instructure.com/*"
    ],
    "options_page": "options.html",
    "action": {
        "default_popup": "popup.html",
        "default_title": "Canvas Helper"
    },

    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+L"
            },
            "description": "Open Canvas Helper popup"
        }
    },
    "icons": {
        "16": "CA.png",
        "32": "CA.png",
        "48": "CA.png",
        "128": "CA.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "popup.html",
                "styles.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}