{
  "manifest_version": 3,
  "name": "Canvas Helper",
  "version": "1.0",
  "description": "Prioritize Canvas assignments and summarize pages.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://*.instructure.com/*"],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Canvas Helper"
  },
  "background": {
    "service_worker": "popup.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
