{
  "manifest_version": 3,
  "name": "Canvas Assistant",
  "version": "1.2",
  "description": "Prioritize Canvas assignments and summarize pages.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.instructure.com/*"
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Canvas Helper"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      },
      "description": "Open Canvas Helper popup"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
